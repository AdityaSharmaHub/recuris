generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Specialization {
  General_Medicine
  Pediatrics
  Dermatology
  Psychiatry
  Radiology
  Anesthesiology
  Emergency_Medicine
  Pulmonology
  Cardiology
  Endocrinology
  Neurology
}

model Patient {
  id       Int    @id @default(autoincrement())
  email    String
  name     String
  password String
}

model Hospital_Admin {
  id       Int    @id @default(autoincrement())
  email    String
  hospital String
  password String
}

model Doctor {
  id       Int    @id @default(autoincrement())
  email    String
  hospital String
  password String
  name String
}

model Hospital {
  id       Int    @id @default(autoincrement())
  name     String
  location String
}

model Appointment {
  id Int @id @default(autoincrement())
  userId Int
  doctorId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}